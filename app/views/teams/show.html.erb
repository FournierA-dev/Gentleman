<div class="container mt-4 ">

  <div class="row">
    <div class="col-6 col-sm-3">
      <%= image_tag "2.jpg", class: "img-fluid rounded float-left mr-3" %>
    </div>
    <div class="col-12 col-sm-6">
      <h2>Equipe <%= @team.name %></h2>
      <ul>
        <% @team.players.each do |player| %>
          <li class="my-3"> <%= player.role %> : <%= player.first_name.capitalize %> <%= player.last_name.upcase %> </li>
        <%end%>
        <li class="my-3">Nb matchs joués : <%= team_match_done(@team) %> </li>
        <li class="my-3">% matchs gagnés : <%= (nb_win_match(@team) / team_match_done(@team) *100).round %> % </li>
        <li class="my-3">Nb matchs restants : <%= Team.count-1 - team_match_done(@team) %></li>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <%= render partial: "teamShowTable", locals:{team: @team} %>
      <%= render "components/returnButton" %>
    </div>
  </div>

</div>