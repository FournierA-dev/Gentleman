<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th scope="col" >#</th>
        <th scope="col" class="text-center">Equipe</th>
        <th scope="col" class="text-center">Poule</th>
        <th scope="col" class="text-center">Score total</th>
        <th scope="col" class="text-center">Matchs jou√©s</th>
        <th scope="col" class="text-center">Points moyens / match</th>
        <th scope="col">Joueur 1</th>
        <th scope="col">Joueur 2</th>
      </tr>
    </thead>
    <tbody>

      <% teams.each_with_index do |team,index| %>
        <tr>
          <th scope="row"> <%= index +1 %> </th>
          <td class="text-center"> <a href="<%= team_path(team) %>" class="class"> <%= team.name %> </a> </td>
          <td class="text-center"> <%= team.pool.name %> </td>
          <td class="text-center"> <%= team.total_score %></td>
          <td class="text-center"> <%= team_match_done(team) %></td>
          <% if !team.total_score.blank? %>
            <td class="text-center"> <%= team.total_score * 1.0 / team_match_done(team) %> </td>
          <%else%>
            <td></td>
          <%end%>
          <% team.players.each_with_index do |player,index| %>
            <td> <%= player.first_name %>  <%= player.last_name %> </td>
          <%end%>
          <%if team.players.count == 0%>
            <td></td> <td></td> 
          <%elsif team.players.count == 1%>
            <td></td> 
          <%end%>
        </tr> 
      <%end%>
    </tbody>
  </table>
</div>