<!-- Bandeau d'alerte -->
    <% if @team_score.errors.any?  %>
      <div class="alert alert-danger" role="alert">
        <p><small>Nous n'avons pas réussi à créer/modifier le score de votre équipe pour la (ou les) raison(s) suivante(s) :</small></p>
        <ul><small>
          <% @team_score.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </small></ul>
      </div>
    <% end %>

<div class="container text-center my-3 text-uppercase font-weight-bold">
  Résultats du match <%=@match.teams[0].name %> / <%=@match.teams[1].name %>
</div>

<div class ="container table-responsive col-12 col-md-6">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Jeu 1</th>
        <th scope="col">Jeu 2</th>
        <th scope="col">Jeu 3</th>
      </tr>
    </thead>
    <tbody>
    <%= form_for [@match,@team_score] do |f| %>
      <tr>
        <th scope="row"><label> <%=f.label :score,"Score équipe" %> </label></th>
        <td><%=f.text_field :score,value: @team_score.score[0], name:"score[]", class:'form-control' %></td>
        <td><%=f.text_field :score,value: @team_score.score[1],  name:"score[]", class:'form-control' %></td>
        <td><%=f.text_field :score,value: @team_score.score[2],  name:"score[]", class:'form-control' %></td>
      </tr>
      <tr>
        <th scope="row"><label> <%=f.label :score,"Score adversaire" %> </label></th>
        <td><%=f.text_field :opponent_score, value: @team_score.opponent_score[0], name:"opponent_score[]", class:'form-control' %></td>
        <td><%=f.text_field :opponent_score, value: @team_score.opponent_score[1], name:"opponent_score[]", class:'form-control' %></td>
        <td><%=f.text_field :opponent_score, value: @team_score.opponent_score[2], name:"opponent_score[]", class:'form-control' %></td>
      </tr>
      
    </tbody>
    </table>
    <button type="submit" class="btn btn-primary"> Sauvegarder le score </button>
    <% end %>
  <%= render "components/returnButton" %>
</div>








