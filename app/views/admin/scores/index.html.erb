<div class="container">
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Scores</th>
          <th scope="col">Match ID</th>
          <th scope="col">Team ID</th>
          <th scope="col">Match Point</th>
          <th scope="col">ACTIONS</th>

        </tr>
      </thead>
      <tbody>
        <% @scores.each_with_index do |score,index| %>
          <tr>
            <th scope="row"> <%= index +1 %> </th>
            <td><%= score.score %></td>
            <td><%= score.match_id %></td>
            <td><%= score.team_id %></td>
            <td><%= score.match_point %></td>
            </td>
            <td>
              <%= link_to "Editer", edit_admin_score_path(score), :class => 'btn btn-warning' %>
              <%= link_to "Supprimer", admin_score_path(score), method: :delete, :confirm => 'Etes-vous sÃ»re ?', :class => 'btn btn-danger' %>
            </td>
          </tr> 
        <%end%>
      </tbody>
    </table>
  </div>
</div>

