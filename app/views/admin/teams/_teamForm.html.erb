<!-- Bandeau d'alerte -->
    <% if team.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <p><small>Nous n'avons pas réussi à créer l'équipe pour la (ou les) raison(s) suivante(s) :</small></p>
        <ul><small>
          <% team.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </small></ul>
      </div>
    <% end %>



<section class ="container py-3 my-2 bg-secondary">

  <!-- Formulaire -->
  <div class="col-12" >
    <%= form_for [:admin, team] do |f| %>

      <div class="form-group d-inline">
        <label> <%=f.label "Equipiers" %> </label>
        <%= f.select(:player_ids, @players, {:include_hidden => false}, :multiple => true, :size => 3) %>
      </div>
      </br>

      <div class="form-group d-inline">
        <label> <%=f.label "Poule" %> </label>
        <%= f.select(:pool_id, @pools_select, {:include_hidden => false}, :multiple => false, :size => 1) %>
      </div>
      <div class="form-group d-inline ">
        <button type="submit" class="btn btn-primary"> Créer l'équipe </button>
      </div>
    <% end %>
  </div>

</section>